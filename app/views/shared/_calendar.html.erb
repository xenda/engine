<% calendar_for(events, :year => 2011, :month => 3) do |t| %>
	<%= t.head('mon', 'tue', 'wed', 'thu', 'fri', 'sat', 'sun') %>
	<% t.day(:day_method => start_date) do |day, events| %>
		<%= day.day %><br />
		<% events.each do |event| %>
			<%= h(event.title) %><br />
		<% end %>
	<% end %>
<% end %>